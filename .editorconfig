# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[**.js]
indent_style = space
indent_size = 4

# SASS Styles
[**.scss]
indent_style = space
indent_size = 4

# CSS Styles
[**.css]
indent_style = space
indent_size = 4


[*.md]
trim_trailing_whitespace = false
